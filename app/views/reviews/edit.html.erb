<h1>Edit Restaurant</h1>

<form action="<%= review_path(params[:id]) %>" method="POST" >
    <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />

    <input type="hidden" name="_method" value="patch" />

<%# ----------Validation field for RAILS---------------- %>
    <% if @review.errors.any? %>
    <div id="error_explanation">
        <h2>
        <%= pluralize(@review.errors.count, "error") %> prohibited
        this article from being saved:
        </h2>
        <ul>
        <% @review.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
    <% end %>
<%# --------------------------- %>

    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="<%= @review.title %>"/>

    <label for="address">Rating</label>
    <input type="text" name="address" name="address" id="address" value="<%= @review.rating %>"/>

    <label>Content</label>
    <input type="textarea" name="description" id="description" value="<%= @review.content %>" />

    <label for="food_type">Food type</label>
    <input type="text" name="food_type" id="food_type"  value="<%= @review.food_type %>"/>

    <input type="submit" value="Update" />
</form>