<h1>Edit Restaurant</h1>

<form action="<%= review_path(params[:id]) %>" method="POST" >
    <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />

    <input type="hidden" name="_method" value="patch" />

    <label for="title">Title</label>
    <input type="text" name="title" id="title" value="<%= @review.title %>"/>

    <label for="rating">Rating</label>
    <input type="text" name="rating" name="rating" id="rating" value="<%= @review.rating %>"/>

    <label>Content</label>
    <input type="textarea" name="content" id="content" value="<%= @review.content %>" />

    <input type="submit" value="Update" />
</form>